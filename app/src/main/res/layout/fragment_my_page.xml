<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="top"
        app:srcCompat="@drawable/my" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/profile"
        android:gravity="center_vertical"
        android:text="홍길동"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <android.widget.Button
        android:id="@+id/logout"
        android:layout_width="50sp"
        android:layout_height="20sp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/name"
        android:gravity="center_vertical"
        android:text="로그아웃"
        android:background="@drawable/empty_button"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="80sp"
        android:layout_height="30sp"
        android:layout_below="@+id/profile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="회원정보"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_list"
        android:layout_width="80sp"
        android:layout_height="200sp"
        android:layout_below="@+id/info"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="사용자\n성별\n생년월일\n기숙사\n룸메이트"
        android:lineSpacingExtra ="15dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:layout_toEndOf="@+id/info_list"
        android:layout_below="@+id/info"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="홍길동"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_gender"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:layout_toEndOf="@+id/info_list"
        android:layout_below="@+id/info_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="남"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_birth"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:layout_toEndOf="@+id/info_list"
        android:layout_below="@+id/info_gender"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:text="2000.11.11"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_dormitory"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:layout_toEndOf="@+id/info_list"
        android:layout_below="@+id/info_birth"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:text="양진재"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_roommate"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:layout_toEndOf="@+id/info_list"
        android:layout_below="@+id/info_dormitory"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:text="김철수"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <android.widget.Button
        android:id="@+id/edit_info"
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:layout_toEndOf="@+id/info_name"
        android:layout_below="@+id/info"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="회원정보 수정"
        android:background="@drawable/empty_button"
        android:textSize="13sp" />


</RelativeLayout>