<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_marginVertical="30dp">

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="공지사항"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/notice_border"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="   메인 페이지로 이동합니다."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:background="@drawable/notice_border2"
        android:drawableLeft="@drawable/home"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="   게시판으로 이동합니다."
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@drawable/notice_border2"
        android:drawableLeft="@drawable/message"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="   매칭 페이지로 이동합니다."
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@drawable/notice_border2"
        android:drawableLeft="@drawable/matching"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="   마이 페이지로 이동합니다."
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@drawable/notice_border2"
        android:drawableLeft="@drawable/my"
        />

</LinearLayout>